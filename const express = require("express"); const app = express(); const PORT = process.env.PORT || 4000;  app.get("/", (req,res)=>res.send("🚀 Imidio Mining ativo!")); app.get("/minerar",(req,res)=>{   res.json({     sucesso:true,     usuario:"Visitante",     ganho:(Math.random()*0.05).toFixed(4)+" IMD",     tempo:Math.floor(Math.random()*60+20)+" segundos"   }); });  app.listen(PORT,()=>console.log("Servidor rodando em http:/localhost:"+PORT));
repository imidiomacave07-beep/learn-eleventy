const express = require("express");
const app = express();
const PORT = process.env.PORT || 4000;

app.get("/", (req,res)=>res.send("ðŸš€ Imidio Mining ativo!"));
app.get("/minerar",(req,res)=>{
  res.json({
    sucesso:true,
    usuario:"Visitante",
    ganho:(Math.random()*0.05).toFixed(4)+" IMD",
    tempo:Math.floor(Math.random()*60+20)+" segundos"
  });
});

app.listen(PORT,()=>console.log("Servidor rodando em http://localhost:"+PORT));
